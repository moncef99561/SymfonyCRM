<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <script src="https://kit.fontawesome.com/a70fc3e5ba.js" crossorigin="anonymous"></script>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
            <a class="navbar-brand fs-4 text-primary" href="{{path('app_home')}}">SymfonyCRM</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item active">
                        <a class="nav-link active" href="{{path('app_home')}}"><i class="fa-solid fa-house me-1"></i> Accueil</a>
                    </li>
                        <li class="nav-item active">
                        <a class="nav-link" href="{{path('client_index')}}"><i class="fa-solid fa-user-tie me-1"></i>Clients</a>
                    </li>
                        <li class="nav-item active">
                        <a class="nav-link" href="{{path('facture_all')}}"><i class="fa-solid fa-file-invoice me-1"></i>Factures</a>
                    </li>
                </ul>
                <div class="ms-auto">
                    {% if app.user %}
                        <form action="{{ path('app_logout') }}" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt"></i> Se déconnecter
                            </button>
                        </form>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt"></i> Se connecter
                        </a>
                    {% endif %}

                </div>
            </div>
        </nav>

        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>


        <div>
            {% block body %}{% endblock %}
        </div>

    </body>
</html>
