{% extends 'base.html.twig' %}

{% block title %}Ajouter un client{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Ajouter un nouveau client</h1>

    {{ form_start(form) }}

    <div class="row w-50">
        <div class="col-md-6 mb-3">
        {{ form_row(form.gerantNom) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.gerantPrenom) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.raisonSocial) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.telephone) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_row(form.adresse) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_row(form.ville) }}
        </div>

        <div class="col-md-6 mb-3">
            {{ form_row(form.pays) }}
        </div>
    </div>

    <button class="btn btn-success mt-3">Enregistrer</button>

    {{ form_end(form) }}
</div>
{% endblock %}

